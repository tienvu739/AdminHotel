<Window x:Class="AdminHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminHotel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="Tên đăng nhập" Margin="10"/>
            <TextBox Name="UsernameTextBox" Width="200" Margin="10"/>
            <TextBlock Text="Mật khẩu" Margin="10"/>
            <PasswordBox Name="PasswordBox" Width="200" Margin="10"/>
            <Button Content="Đăng nhập" Width="200" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
